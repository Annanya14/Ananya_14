nfo_gain(data, attr, target_attr)) for attr in attributes]\n","    best_attr, best_gain = max(gains, key=lambda x: x[1])\n","\n","    tree = {best_attr: {}}\n","\n","    # Get unique values of the best attribute\n","    values = set(record[best_attr] for record in data)\n","\n","    for val in values:\n","        subset = [record for record in data if record[best_attr] == val]\n","        if not subset:\n","            tree[best_attr][val] = majority_class(data, target_attr)\n","        else:\n","            # Recurse on subset removing best_attr from attributes\n","            subtree = build_tree(subset, [a for a in attributes if a != best_attr], target_attr)\n","            tree[best_attr][val] = subtree\n","    return tree\n"],"metadata":{"id":"_VMGUnDRtGcf"},"execution_count":null,"outputs":[]},{"cell_type":"code","source":["def predict(tree, sample):\n","    if not isinstance(tree, dict):\n","        return tree\n","    root = next(iter(tree))\n","    attr_value = sample.get(root)\n","    subtree = tree[root].get(attr_value)\n","    if subtree is None:\n","        # If attribute value not seen in training, return None or majority class fallback\n","        return None\n","    return predict(subtree, sample)\n"],"metadata":{"id":"SgzpcwiwtKn3"},"execution_count":null,"outputs":[]},{"cell_type":"code","source":["data = [\n","    {'Outlook': 'Sunny', 'Temperature': 'Hot', 'Humidity': 'High', 'Wind': 'Weak', 'PlayTennis': 'No'},\n","    {'Outlook': 'Sunny', 'Temperature': 'Hot', 'Humidity': 'High', 'Wind': 'Strong', 'PlayTennis': 'No'},\n","    {'Outlook': 'Overcast', 'Temperature': 'Hot', 'Humidity': 'High', 'Wind': 'Weak', 'PlayTennis': 'Yes'},\n","    {'Outlook': 'Rain', 'Temperature': 'Mild', 'Humidity': 'High', 'Wind': 'Weak', 'PlayTennis': 'Yes'},\n","    {'Outlook': 'Rain', 'Temperature': 'Cool', 'Humidity': 'Normal', 'Wind': 'Weak', 'PlayTennis': 'Yes'},\n","    {'Outlook': 'Rain', 'Temperature': 'Cool', 'Humidity': 'Normal', 'Wind': 'Strong', 'PlayTennis'